<?xml version="1.0" encoding="UTF-8"?>
<PharmML xmlns="http://www.pharmml.org/2013/03/PharmML"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.pharmml.org/2013/03/PharmML http://www.pharmml.org/2013/03/PharmML"
    xmlns:ct="http://www.pharmml.org/2013/03/CommonTypes"
    xmlns:math="http://www.pharmml.org/2013/03/Maths" 
    xmlns:ds="http://www.pharmml.org/2013/08/Dataset"
    implementedBy="MJS" writtenVersion="0.4.1" id="i1">
    
    <!-- MODEL NAME -->
    <ct:Name>Example C3</ct:Name>
    
    <ct:Description>Example C3 - model with PK macros</ct:Description>
    
    <!-- INDEPENDENT VARIABLE -->
    <IndependentVariable symbId="t"/>

    <!-- SYMBOL DEFINITION - RESUIDUAL ERROR MODEL -->
    <ct:FunctionDefinition symbId="constantErrorModel" symbolType="real">
        <ct:FunctionArgument symbId="a" symbolType="real"/>
        <ct:Definition>
            <ct:SymbRef symbIdRef="a"/>
        </ct:Definition>
    </ct:FunctionDefinition>

    <!-- BLOCK I: MODEL DEFINITION -->
    <ModelDefinition  xmlns="http://www.pharmml.org/2013/03/ModelDefinition">
        
        <!-- VARIABILITY MODEL -->
        <VariabilityModel blkId="modelVar" type="parameterVariability"> 
            <Level symbId="indiv"/>
        </VariabilityModel>
        
        <VariabilityModel blkId="obsErr" type="residualError"> 
            <Level symbId="residual"/>
        </VariabilityModel>
        
        <CovariateModel blkId="cm1">
            <Covariate symbId="SEX">
                <Categorical>
                    <Category catId="1"/>
                </Categorical>
            </Covariate>
        </CovariateModel>
        
        <ParameterModel blkId="pm1">
            <SimpleParameter symbId="V"/>
        </ParameterModel>
        
        <!-- Example C3 -->
        
        <!--            [LONGITUDINAL]
            input = {F, ka, V, k}
            PK:
            compartment(cmt=1, amount=Ac) 
            oral(adm=1, cmt=1, ka, p=F) 
            iv(adm=2, cmt=1)
            elimination(cmt=1, k) 
            Cc = Ac/V
        -->
        
        <StructuralModel blkId="sm1">
            <ct:Variable symbolType="real" symbId="Ac"/>
            <ct:Variable symbolType="real" symbId="Cc">
                <ct:Assign>
                    <math:Equation>
                        <math:Binop op="divide">
                            <ct:SymbRef symbIdRef="Ac"/>
                            <ct:SymbRef symbIdRef="V"/>
                        </math:Binop>
                    </math:Equation>
                </ct:Assign>
            </ct:Variable>
            
            <PKmacros>
                <!-- compartment(cmt=1, amount=Ac) -->
                <Compartment>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value argument="amount">
                        <ct:SymbRef symbIdRef="Ac"/>
                    </Value>
                </Compartment>
                
                <!-- oral(adm=1, cmt=1, ka, p=F) -->
                <Oral>
                    <Value argument="adm">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef symbIdRef="ka"/>
                    </Value>
                    <Value argument="p">
                        <ct:SymbRef symbIdRef="F"/>
                    </Value>
                </Oral>
                
                <!-- iv(adm=2, cmt=1) -->
                <IV>
                    <Value argument="adm">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                </IV>
                
                <!-- elimination(cmt=1, k) -->
                <Elimination>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef symbIdRef="k"/>
                    </Value>
                </Elimination>
            </PKmacros>
        </StructuralModel>
        
        

        <ObservationModel blkId="om1">
            <ContinuousData>
                <RandomVariable symbId="eta">
                    <ct:VariabilityReference>
                        <ct:SymbRef blkIdRef="modelVar" symbIdRef="indiv"/>
                    </ct:VariabilityReference>
                    <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="">
                        <mean><rVal>0</rVal></mean>
                        <stddev><prVal>1</prVal></stddev>
                    </NormalDistribution>
                </RandomVariable>
                <Standard symbId="Cc_obs">
                    <Output>
                        <ct:SymbRef blkIdRef="sm1" symbIdRef="Cc"/>
                    </Output>
                    <ErrorModel>
                        <ct:Assign>
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="a"/>
                        </ct:Assign>
                    </ErrorModel>
                    <ResidualError>
                        <ct:SymbRef symbIdRef="eta"/>
                    </ResidualError>
                </Standard>
            </ContinuousData>
        </ObservationModel>
    </ModelDefinition>


    <!-- BLOCK III: MODELLING STEPS -->
    <ModellingSteps xmlns="http://www.pharmml.org/2013/03/ModellingSteps">
        
        <NONMEMdataSet oid="NMoid">
            <!-- omitted details -->
            
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="TIME"/>
                <ct:SymbRef symbIdRef="t"/>
            </ColumnMapping>
            
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="DV"/>
                <ct:SymbRef blkIdRef="om1" symbIdRef="Cc_obs"/>
            </ColumnMapping>
            
            <DataSet xmlns="http://www.pharmml.org/2013/08/Dataset">
                <Definition>
                    <Column columnId="ID" columnType="id" valueType="id" columnNum="1"/>
                    <Column columnId="TIME" columnType="idv" valueType="real" columnNum="2"/>
                    <Column columnId="DV" columnType="dv" valueType="real" columnNum="3"/>
                    <Column columnId="AMT" columnType="dose" valueType="real" columnNum="4"/>
                    <Column columnId="CMT" columnType="cmt" valueType="int" columnNum="5"/> 
                    <Column columnId="ADM" columnType="cmt" valueType="int" columnNum="6"/> 
                </Definition>
                <ImportData oid="importNONMEM">
                    <path>example3.csv</path>
                    <format>CSV</format>
                    <delimiter>COMMA</delimiter>
                </ImportData>
            </DataSet>
        </NONMEMdataSet>
        
        <!-- ESTIMATION STEP -->
        <EstimationStep oid="estTask1">
            
            <TargetToolReference>
                <ct:OidRef oidRef="NMoid"/>
            </TargetToolReference>
            
            <ParametersToEstimate>
                <!-- INITIAL CONDITIONS -->
                <!-- P0 -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_P0"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_P0"/>
                    <InitialEstimate>
                        <ct:Real>0.5</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <!-- Q0 -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_Q0"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_Q0"/>
                    <InitialEstimate>
                        <ct:Real>0.5</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- RESIDUAL ERROR PARAMETER -->
                <!-- a -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="om1" symbIdRef="a"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- STRUCTURAL PARAMETERS and RANDOM EFFECTS -->
                <!-- LAMBDAP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- KDE -->
                <!-- omega_KDE is fixed, see pm1 -->
                <!-- only pop_KDE to be estimated -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KDE"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>

                <!-- KQPP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KQPP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_KQPP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- LAMBDAP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- KPQ -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KQP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_KQP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- GAMMA -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_GAMMA"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_GAMMA"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- DELTAQP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_DELTAQP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_DELTAQP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
            </ParametersToEstimate>
            <Operation order="1" opType="estPop">
                <Property name="Settings">
                    <ct:Assign>
                        <ct:String>defaultSettings</ct:String>
                    </ct:Assign>
                </Property>
                <Algorithm definition="ode15s">
                    <Property name="tolerance">
                        <ct:Assign>
                            <ct:Real>0.0001</ct:Real>
                        </ct:Assign>
                    </Property>
                </Algorithm>
            </Operation>
            <Operation order="2" opType="estIndiv"/>
        </EstimationStep>

        <!-- STEP DEPENDENCIES -->
        <StepDependencies>
            <Step>
                <ct:OidRef oidRef="estTask1"/>
            </Step>
        </StepDependencies>
    </ModellingSteps>

</PharmML>
