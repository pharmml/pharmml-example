<?xml version="1.0" encoding="UTF-8"?>
<PharmML xmlns="http://www.pharmml.org/2013/03/PharmML"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.pharmml.org/2013/03/PharmML http://www.pharmml.org/2013/03/PharmML"
    xmlns:ct="http://www.pharmml.org/2013/03/CommonTypes"
    xmlns:math="http://www.pharmml.org/2013/03/Maths" 
    xmlns:ds="http://www.pharmml.org/2013/08/Dataset"
    implementedBy="MJS" writtenVersion="0.4.1" id="i1">
    
    <!-- MODEL NAME -->
    <ct:Name>Example C6</ct:Name>
    
    <ct:Description>Example C6 - model with PK macros</ct:Description>
    
    <!-- INDEPENDENT VARIABLE -->
    <IndependentVariable symbId="t"/>

    <!-- SYMBOL DEFINITION - RESUIDUAL ERROR MODEL -->
    <ct:FunctionDefinition symbId="constantErrorModel" symbolType="real">
        <ct:FunctionArgument symbId="a" symbolType="real"/>
        <ct:Definition>
            <ct:SymbRef symbIdRef="a"/>
        </ct:Definition>
    </ct:FunctionDefinition>

    <!-- BLOCK I: MODEL DEFINITION -->
    <ModelDefinition  xmlns="http://www.pharmml.org/2013/03/ModelDefinition">
        
        <!-- VARIABILITY MODEL -->
        <VariabilityModel blkId="modelVar" type="parameterVariability"> 
            <Level symbId="indiv"/>
        </VariabilityModel>
        
        <VariabilityModel blkId="obsErr" type="residualError"> 
            <Level symbId="residual"/>
        </VariabilityModel>
        
        <CovariateModel blkId="cm1">
            <Covariate symbId="SEX">
                <Categorical>
                    <Category catId="1"/>
                </Categorical>
            </Covariate>
        </CovariateModel>
        
        <ParameterModel blkId="pm1">
            <SimpleParameter symbId="V"/>
        </ParameterModel>
        
        <!-- Example C6 -->
        
        <!--            [LONGITUDINAL]
            input = {F1, F2, ka, Tk0, kl, k23, k32, V, k, Vm, Km}
            PK:
            compartment(cmt=1, amount=Al)                                                   
            compartment(cmt=2, amount=Ac)
            peripheral(k23,k32)
            oral(type=1, cmt=1, ka, p=F1)
            oral(type=2, cmt=2, Tk0, p=F2)
            iv(type=3, cmt=2)
            transfer(from=1, to=2, kt=kl)
            elimination(cmt=1, k)
            elimination(cmt=2, Km, Vm)
            Cc = Ac/V-->
        
        <StructuralModel blkId="sm1">
            <ct:Variable symbolType="real" symbId="Al"/>
            <ct:Variable symbolType="real" symbId="Ac"/>
            <ct:Variable symbolType="real" symbId="Cc">
                <ct:Assign>
                    <math:Equation>
                        <math:Binop op="divide">
                            <ct:SymbRef symbIdRef="Ac"/>
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="V"/>
                        </math:Binop>
                    </math:Equation>
                </ct:Assign>
            </ct:Variable>
            
            <PKmacros>
                <!-- compartment(cmt=1, amount=Al) -->
                <Compartment>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value argument="amount">
                        <ct:SymbRef symbIdRef="Al"/>
                    </Value>
                </Compartment>
                
                <!-- compartment(cmt=2, amount=Ac) -->
                <Compartment>
                    <Value argument="cmt">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value argument="amount">
                        <ct:SymbRef symbIdRef="Ac"/>
                    </Value>
                </Compartment>
                
                <!-- peripheral(k23,k32) -->
                <Peripheral>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="k23"/>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="k32"/>
                    </Value>
                </Peripheral>
                
                <!-- oral(type=1, cmt=1, ka, p=F1) -->
                <Oral>
                    <Value argument="type">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="ka"/>
                    </Value>
                    <Value argument="p">
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="F1"/>
                    </Value>
                </Oral>
                
                <!-- oral(type=2, cmt=2, Tk0, p=F2) -->
                <Oral>
                    <Value argument="cmt">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value argument="type">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="Tk0"/>
                    </Value>
                    <Value argument="p">
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="F2"/>
                    </Value>
                </Oral>
                
                <!-- iv(type=3, cmt=2) -->
                <IV>
                    <Value argument="cmt">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value argument="type">
                        <ct:Int>3</ct:Int>
                    </Value>
                </IV>
                
                <!-- transfer(from=1, to=2, kt=kl) -->
                <Transfer>
                    <Value argument="from">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value argument="to">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value argument="kt">
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="kl"/>
                    </Value>
                </Transfer>
                
                <!-- elimination(cmt=1, k) -->
                <Elimination>
                    <Value argument="cmt">
                        <ct:Int>1</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="k"/>
                    </Value>
                </Elimination>
                
                <!-- elimination(cmt=2, Km, Vm) -->
                <Elimination>
                    <Value argument="cmt">
                        <ct:Int>2</ct:Int>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="Vm"/>
                    </Value>
                    <Value>
                        <ct:SymbRef blkIdRef="pm1" symbIdRef="Km"/>
                    </Value>
                </Elimination>
            </PKmacros>
        </StructuralModel>
        
        

        <ObservationModel blkId="om1">
            <ContinuousData>
                <RandomVariable symbId="eta">
                    <ct:VariabilityReference>
                        <ct:SymbRef blkIdRef="modelVar" symbIdRef="indiv"/>
                    </ct:VariabilityReference>
                    <NormalDistribution xmlns="http://www.uncertml.org/3.0" definition="">
                        <mean><rVal>0</rVal></mean>
                        <stddev><prVal>1</prVal></stddev>
                    </NormalDistribution>
                </RandomVariable>
                <Standard symbId="Cc_obs">
                    <Output>
                        <ct:SymbRef blkIdRef="sm1" symbIdRef="Cc"/>
                    </Output>
                    <ErrorModel>
                        <ct:Assign>
                            <ct:SymbRef blkIdRef="pm1" symbIdRef="a"/>
                        </ct:Assign>
                    </ErrorModel>
                    <ResidualError>
                        <ct:SymbRef symbIdRef="eta"/>
                    </ResidualError>
                </Standard>
            </ContinuousData>
        </ObservationModel>
    </ModelDefinition>


    <!-- BLOCK III: MODELLING STEPS -->
    <ModellingSteps xmlns="http://www.pharmml.org/2013/03/ModellingSteps">
        
        <NONMEMdataSet oid="NMoid">
            <!-- omitted details -->
            
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="TIME"/>
                <ct:SymbRef symbIdRef="t"/>
            </ColumnMapping>
            
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="DV"/>
                <ct:SymbRef blkIdRef="om1" symbIdRef="Cc_obs"/>
            </ColumnMapping>
            
            <DataSet xmlns="http://www.pharmml.org/2013/08/Dataset">
                <Definition>
                    <Column columnId="ID" columnType="id" valueType="id" columnNum="1"/>
                    <Column columnId="TIME" columnType="idv" valueType="real" columnNum="2"/>
                    <Column columnId="DV" columnType="dv" valueType="real" columnNum="3"/>
                    <Column columnId="MDV" columnType="mdv" valueType="int" columnNum="4"/>
                    <Column columnId="DOSE" columnType="dose" valueType="real" columnNum="5"/>
                    <Column columnId="EVID" columnType="evid" valueType="int" columnNum="6"/>
                    <Column columnId="CMT" columnType="cmt" valueType="int" columnNum="7"/>
                </Definition>
                <ImportData oid="importNONMEM">
                    <path>RIBBA2012_PCV.csv</path>
                    <format>CSV</format>
                    <delimiter>COMMA</delimiter>
                </ImportData>
            </DataSet>
        </NONMEMdataSet>
        
        <!-- ALTERNATIVE -->
        <TargetTool oid="MLXoid">
            <TargetToolName>MONOLIX</TargetToolName>
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="TIME"/>
                <ct:SymbRef symbIdRef="t"/>
            </ColumnMapping>
            
            <ColumnMapping>
                <ColumnRef xmlns="http://www.pharmml.org/2013/08/Dataset" columnIdRef="DV"/>
                <ct:SymbRef blkIdRef="om1" symbIdRef="Cc_obs"/>
            </ColumnMapping>
            
            <ds:TargetToolData>
                <ds:Definition>
                    <ds:Column columnId="ID" columnType="id" valueType="id" columnNum="1"/>
                    <ds:Column columnId="TIME" columnType="idv" valueType="real" columnNum="2"/>
                    <ds:Column columnId="DV" columnType="dv" valueType="real" columnNum="3"/>
                    <ds:Column columnId="MDV" columnType="mdv" valueType="int" columnNum="4"/>
                    <ds:Column columnId="DOSE" columnType="dose" valueType="real" columnNum="5"/>
                    <ds:Column columnId="EVID" columnType="evid" valueType="int" columnNum="6"/>
                    <ds:Column columnId="CMT" columnType="cmt" valueType="int" columnNum="7"/> 
                </ds:Definition>
                <ds:ImportTargetData oid="importMONOLIOX">
                    <ds:path>RIBBA2012_PCV.csv</ds:path>
                    <ds:format>CSV</ds:format>
                    <ds:delimiter>COMMA</ds:delimiter>
                </ds:ImportTargetData>
            </ds:TargetToolData>
        </TargetTool>
        
        
        <!-- ESTIMATION STEP -->
        <EstimationStep oid="estTask1">
            
            <TargetToolReference>
                <ct:OidRef oidRef="NMoid"/>
            </TargetToolReference>
            
            <ParametersToEstimate>
                <!-- INITIAL CONDITIONS -->
                <!-- P0 -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_P0"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_P0"/>
                    <InitialEstimate>
                        <ct:Real>0.5</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <!-- Q0 -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_Q0"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_Q0"/>
                    <InitialEstimate>
                        <ct:Real>0.5</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- RESIDUAL ERROR PARAMETER -->
                <!-- a -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="om1" symbIdRef="a"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- STRUCTURAL PARAMETERS and RANDOM EFFECTS -->
                <!-- LAMBDAP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- KDE -->
                <!-- omega_KDE is fixed, see pm1 -->
                <!-- only pop_KDE to be estimated -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KDE"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>

                <!-- KQPP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KQPP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_KQPP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- LAMBDAP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_LAMBDAP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- KPQ -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_KQP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_KQP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- GAMMA -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_GAMMA"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_GAMMA"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
                <!-- DELTAQP -->
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="pop_DELTAQP"/>
                    <InitialEstimate>
                        <ct:Real>10</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                <ParameterEstimation>
                    <ct:SymbRef blkIdRef="pm1" symbIdRef="omega_DELTAQP"/>
                    <InitialEstimate>
                        <ct:Real>1</ct:Real>
                    </InitialEstimate>
                </ParameterEstimation>
                
            </ParametersToEstimate>
            <Operation order="1" opType="estPop">
                <Property name="Settings">
                    <ct:Assign>
                        <ct:String>defaultSettings</ct:String>
                    </ct:Assign>
                </Property>
                <Algorithm definition="ode15s">
                    <Property name="tolerance">
                        <ct:Assign>
                            <ct:Real>0.0001</ct:Real>
                        </ct:Assign>
                    </Property>
                </Algorithm>
            </Operation>
            <Operation order="2" opType="estIndiv"/>
        </EstimationStep>

        <!-- STEP DEPENDENCIES -->
        <StepDependencies>
            <Step>
                <ct:OidRef oidRef="estTask1"/>
            </Step>
        </StepDependencies>
    </ModellingSteps>

</PharmML>
