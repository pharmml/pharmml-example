<?xml version="1.0" encoding="UTF-8"?>
<PharmML xmlns="http://www.pharmml.org/pharmml/0.8/PharmML"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.pharmml.org/pharmml/0.8/PharmML http://www.pharmml.org/pharmml/0.8/PharmML"
    xmlns:ct="http://www.pharmml.org/pharmml/0.8/CommonTypes"
    xmlns:ds="http://www.pharmml.org/pharmml/0.8/Dataset"
    xmlns:mdef="http://www.pharmml.org/pharmml/0.8/ModelDefinition"
    xmlns:po="http://www.pharmml.org/probonto/ProbOnto"
    xmlns:math="http://www.pharmml.org/pharmml/0.8/Maths"
    implementedBy="MJS" writtenVersion="0.8.1"
    metadataFile="example3_task1.rdf" id="i1">
    
    <!--    Task description
	This example is taken from the PFIM documentation (PFIM 3.2, additional documentation, example 7, refer for more details). The purpose is to evaluate a design with 2 covariates. This example has the following characteristics:
•	PK model is a one compartment oral model with first order absorption and first order elimination
•	covariate effect: gender effect and a genetic effect in three categories on the volume of distribution (V)
◦	we assume that the effect of gender and genetic effect on the PK parameters is defined in the model object
•	design:
◦	 dose is fixed to 30 for the 40 subjects
◦	same sampling times at 0.5, 2, 6 and 8. -->
    
    
    <!-- MODEL NAME -->
    <ct:Name>example3_task1 - design only</ct:Name>
    
    <ct:Description>based on example3_task1 - design only with dummy model definition</ct:Description>
    
    <!-- INDEPENDENT VARIABLE -->
    <IndependentVariable symbId="time"/>

    <!-- MODEL DEFINITION -->
    <ModelDefinition  xmlns="http://www.pharmml.org/pharmml/0.8/ModelDefinition">
        
        <!-- VARIABILITY MODEL -->
        <VariabilityModel blkId="vm1" type="parameterVariability">
            <Level symbId="subject"/>
        </VariabilityModel>
        
        <!-- COVARIATE MODEL -->
        <CovariateModel blkId="cm1">
            <Covariate symbId="SEX">
                <Categorical>
                    <Category catId="F"/>
                    <Category catId="M"/>
                </Categorical>
            </Covariate>
            <Covariate symbId="Genetics">
                <Categorical>
                    <Category catId="common_Hz"/>
                    <Category catId="hz"/>
                    <Category catId="rare_hz"/>
                </Categorical>
            </Covariate>
            
            <Covariate symbId="WT">
                <Continuous>
                    <Distribution>
                        <po:ProbOnto name="Normal1">
                            <po:Parameter name="mean">
                                <ct:Assign>
                                    <ct:SymbRef symbIdRef="WTmean"/>
                                </ct:Assign>
                            </po:Parameter>
                            <po:Parameter name="stdev">
                                <ct:Assign>
                                    <ct:SymbRef symbIdRef="WTvariance"/>
                                </ct:Assign>
                            </po:Parameter>
                        </po:ProbOnto>
                    </Distribution>
                </Continuous>
            </Covariate>
            
        </CovariateModel>
        
        <!-- PARAMETER MODEL -->
        <ParameterModel blkId="pm1">
            <PopulationParameter symbId="a"/>
        </ParameterModel>
        
        <StructuralModel blkId="sm1">
            <ct:Variable symbolType="real" symbId="A"/>
            <ct:Variable symbolType="real" symbId="E"/>
        </StructuralModel>
        
        <ObservationModel blkId="om1">
            <ContinuousData>
                <PopulationParameter symbId="a"/>
                <Standard symbId="Conc">
                    <Output>
                        <ct:SymbRef blkIdRef="sm1" symbIdRef="A"/>
                    </Output>
                    <ErrorModel>
                        <ct:Assign>
                            <ct:Real>1</ct:Real>
                        </ct:Assign>
                    </ErrorModel>
                    <ResidualError>
                        <ct:SymbRef symbIdRef="blub"/>
                    </ResidualError>
                </Standard>
            </ContinuousData>
        </ObservationModel>
        
        <ObservationModel blkId="om2">
            <ContinuousData>
                <PopulationParameter symbId="a"/>
                <Standard symbId="Effect">
                    <Output>
                        <ct:SymbRef blkIdRef="sm1" symbIdRef="E"/>
                    </Output>
                    <ErrorModel>
                        <ct:Assign>
                            <ct:Real>1</ct:Real>
                        </ct:Assign>
                    </ErrorModel>
                    <ResidualError>
                        <ct:SymbRef symbIdRef="blub"/>
                    </ResidualError>
                </Standard>
            </ContinuousData>
        </ObservationModel>
        
    </ModelDefinition>
    
    <!-- TRIAL DEFINITION -->
    <TrialDesign xmlns="http://www.pharmml.org/pharmml/0.8/TrialDesign">
        
        <!-- Genp1, Genp2, Genp3 -->
        <mdef:DesignParameter symbId="Genp1">
            <ct:Assign>
                <ct:Real>0.5</ct:Real>
            </ct:Assign>
        </mdef:DesignParameter>
        <mdef:DesignParameter symbId="Genp2">
            <ct:Assign>
                <ct:Real>0.25</ct:Real>
            </ct:Assign>
        </mdef:DesignParameter>
        <mdef:DesignParameter symbId="Genp3">
            <ct:Assign>
                <math:Binop op="minus">
                    <ct:Real>1</ct:Real>
                    <math:Binop op="plus">
                        <ct:SymbRef symbIdRef="Genp1"/>
                        <ct:SymbRef symbIdRef="Genp2"/>
                    </math:Binop>
                </math:Binop>
            </ct:Assign>
        </mdef:DesignParameter>
        
        <Interventions>
            <Administration oid="admin1">
                <Bolus>
                    <DoseAmount inputTarget="admType">
                        <TargetMapping blkIdRef="sm1">
                            <ds:Map admNumber="1"/>
                        </TargetMapping>
                        <ct:Assign>
                            <ct:Real>30</ct:Real>
                        </ct:Assign>
                    </DoseAmount>
                    <DosingTimes>
                        <ct:Assign>
                            <ct:Real>0</ct:Real>
                        </ct:Assign>
                    </DosingTimes>
                </Bolus>
            </Administration>
        </Interventions>            
        
        <Observations>
            <Observation oid="window1">
                <ObservationTimes>
                    <ct:Assign>
                        <ct:Vector>
                            <ct:VectorElements>
                                <ct:Real>0.5</ct:Real>
                                <ct:Real>2</ct:Real>
                                <ct:Real>6</ct:Real>
                                <ct:Real>8</ct:Real>
                            </ct:VectorElements>
                        </ct:Vector>
                    </ct:Assign>
                </ObservationTimes>
                <Continuous>
                    <ct:SymbRef blkIdRef="om1" symbIdRef="Y"/>
                </Continuous>
            </Observation>
        </Observations>
        
        <Covariates>
            <!-- COVARIATE MODEL - overwritting covariate model defined in ModelDefinition -->
            <CovariateModel oid="td_cm1">
                <CovariateModelRef blkIdRef="cm1"/>
                <Covariate symbId="SEX">
                    <mdef:Categorical>
                        <mdef:Category catId="M">
                            <mdef:Probability>
                                <ct:Real>0.5</ct:Real>
                            </mdef:Probability>
                        </mdef:Category>
                        <mdef:Category catId="F">
                            <mdef:Probability>
                                <ct:Real>0.5</ct:Real>
                            </mdef:Probability>
                        </mdef:Category>
                    </mdef:Categorical>
                </Covariate>
                <Covariate symbId="Genetics">
                    <mdef:Categorical>
                        <mdef:Category catId="common_Hz">
                            <mdef:Probability>
                                <ct:SymbRef symbIdRef="Genp1"/>
                            </mdef:Probability>
                        </mdef:Category>
                        <mdef:Category catId="hz">
                            <mdef:Probability>
                                <ct:SymbRef symbIdRef="Genp2"/>
                            </mdef:Probability>
                        </mdef:Category>
                        <mdef:Category catId="rare_hz">
                            <mdef:Probability>
                                <ct:SymbRef symbIdRef="Genp3"/>
                            </mdef:Probability>
                        </mdef:Category>
                    </mdef:Categorical>
                </Covariate>
            </CovariateModel>            
        </Covariates>
        
        <DesignSpaces>
            
            <DesignSpace>
                <ObservationRef oidRef="window1"/>
                <ObservationTimes>
                    <ct:Assign>
                        <ct:Vector>
                            <ct:VectorElements>
                                <ct:Real>0.5</ct:Real>
                                <ct:Real>1</ct:Real>
                                <ct:Real>2</ct:Real>
                                <ct:Real>3</ct:Real>
                                <ct:Real>4</ct:Real>
                                <ct:Real>6</ct:Real>
                                <ct:Real>7</ct:Real>
                            </ct:VectorElements>
                        </ct:Vector>
                    </ct:Assign>
                </ObservationTimes>
            </DesignSpace>
            
            <DesignSpace>
                <CovariateModelRef oidRef="td_cm1"/>
                <CovariateRef symbIdRef="SEX">
                    <mdef:Categorical>
                        <mdef:Category catId="M">
                            <mdef:Probability>
                                <ct:Interval>
                                    <ct:LeftEndpoint>
                                        <ct:Assign>
                                            <ct:Real>0</ct:Real>
                                        </ct:Assign>
                                    </ct:LeftEndpoint>
                                    <ct:RightEndpoint>
                                        <ct:Assign>
                                            <ct:Real>1</ct:Real>
                                        </ct:Assign>
                                    </ct:RightEndpoint>
                                </ct:Interval>
                            </mdef:Probability>
                        </mdef:Category>
                    </mdef:Categorical>
                </CovariateRef>
            </DesignSpace>
            
            <DesignSpace>
                <CovariateModelRef oidRef="td_cm1"/>
                <CovariateRef symbIdRef="SEX">
                    <mdef:Categorical>
                        <mdef:Category catId="F">
                            <mdef:Probability>
                                <ct:Interval>
                                    <ct:LeftEndpoint>
                                        <ct:Assign>
                                            <ct:Real>0</ct:Real>
                                        </ct:Assign>
                                    </ct:LeftEndpoint>
                                    <ct:RightEndpoint>
                                        <ct:Assign>
                                            <ct:Real>1</ct:Real>
                                        </ct:Assign>
                                    </ct:RightEndpoint>
                                </ct:Interval>
                            </mdef:Probability>
                        </mdef:Category>
                    </mdef:Categorical>
                </CovariateRef>
            </DesignSpace>
            
            <DesignSpace>
                <ct:SymbRef symbIdRef="Genp1"/>
                <ct:Assign>
                    <ct:Interval>
                        <ct:LeftEndpoint>
                            <ct:Assign>
                                <ct:Real>0.25</ct:Real>
                            </ct:Assign>
                        </ct:LeftEndpoint>
                        <ct:RightEndpoint>
                            <ct:Assign>
                                <ct:Real>1</ct:Real>
                            </ct:Assign>
                        </ct:RightEndpoint>
                    </ct:Interval>
                </ct:Assign>
            </DesignSpace>
            <DesignSpace>
                <ct:SymbRef symbIdRef="Genp2"/>
                <ct:Assign>
                    <ct:Interval>
                        <ct:LeftEndpoint>
                            <ct:Assign>
                                <ct:Real>0.25</ct:Real>
                            </ct:Assign>
                        </ct:LeftEndpoint>
                        <ct:RightEndpoint>
                            <ct:Assign>
                                <ct:Real>0.5</ct:Real>
                            </ct:Assign>
                        </ct:RightEndpoint>
                    </ct:Interval>
                </ct:Assign>
            </DesignSpace>
            <DesignSpace>
                <ct:SymbRef symbIdRef="Genp3"/>
                <ct:Assign>
                    <ct:Interval>
                        <ct:LeftEndpoint>
                            <ct:Assign>
                                <ct:Real>0</ct:Real>
                            </ct:Assign>
                        </ct:LeftEndpoint>
                        <ct:RightEndpoint>
                            <ct:Assign>
                                <ct:Real>0.25</ct:Real>
                            </ct:Assign>
                        </ct:RightEndpoint>
                    </ct:Interval>
                </ct:Assign>
            </DesignSpace>
        </DesignSpaces>
        
        <Arms>
            <NumberSamples>
                <ct:Assign>
                    <ct:Int>100</ct:Int>
                </ct:Assign>
            </NumberSamples>
            <TotalSize>
                <ct:Assign>
                    <ct:Int>40</ct:Int>
                </ct:Assign>
            </TotalSize>
            
            <Arm oid="arm1">
                <ArmSize>
                    <ct:Assign>
                        <ct:Int>40</ct:Int>
                    </ct:Assign>
                </ArmSize>
                <InterventionSequence>
                    <InterventionList>
                        <InterventionRef oidRef="admin1"/>
                    </InterventionList>
                </InterventionSequence>
                <ObservationSequence>
                    <ObservationList>
                        <ObservationRef oidRef="window1"/>
                    </ObservationList>
                    <Start>
                        <ct:Assign>
                            <ct:Real>0</ct:Real>
                        </ct:Assign>
                    </Start>
                </ObservationSequence>
            </Arm>
        </Arms>
    </TrialDesign>

    <ModellingSteps xmlns="http://www.pharmml.org/pharmml/0.8/ModellingSteps">
        
        <TargetTool oid="targetTool">
            <TargetToolName>PFIM</TargetToolName>
        </TargetTool>
        
        <OptimalDesignStep oid="evaTask1">
            
            <TargetToolReference>
                <ct:OidRef oidRef="targetTool"/>
            </TargetToolReference>
            
            <OptimiseOn>
                <ObservationTimes/>
                <ct:SymbRef symbIdRef="SEX"/>
                <ct:SymbRef symbIdRef="Genp1"/>
                <ct:SymbRef symbIdRef="Genp2"/>
                <ct:SymbRef symbIdRef="Genp3"/>
            </OptimiseOn>

            <FIM type="I"/>
            
            <Method>
                <ApproximateFIM type="full"/>
                <OptimizationAlgorithm type="FedorovWynn"/>
            </Method>
            
            <Cost>
                <TotalCost>
                    <ct:Assign>
                        <ct:Real>100</ct:Real>
                    </ct:Assign>
                </TotalCost>
            </Cost>
            
            <Operation opType="evaluation" order="1"/>
        </OptimalDesignStep>
        
        <!-- STEP DEPENDENCIES -->
        <StepDependencies>
            <Step>
                <ct:OidRef oidRef="evaTask1"/>
            </Step>
        </StepDependencies>
    </ModellingSteps>
</PharmML>
