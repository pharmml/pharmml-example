<?xml version="1.0" encoding="UTF-8"?>
<PharmML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.pharmml.org/2013/03/PharmML"
    xsi:schemaLocation="http://www.pharmml.org/2013/03/PharmML http://www.pharmml.org/2013/03/PharmML"
    xmlns:math="http://www.pharmml.org/2013/03/Maths"
    xmlns:ct="http://www.pharmml.org/2013/03/CommonTypes"
    xmlns:ds="http://www.pharmml.org/2013/08/Dataset"
    xmlns:mstep="http://www.pharmml.org/2013/03/ModellingSteps"
    xmlns:mml="http://www.pharmml.org/2013/03/PharmML"
    xmlns:un="http://www.uncertml.org/3.0"
    implementedBy="MJS" writtenVersion="0.3.2" id="i1">
    
    <ct:Name>Categorical template</ct:Name>
    
    <ct:Description>Categorical model template</ct:Description>
    
    <IndependentVariable symbId="t"/>
    
    <!-- MODEL -->
    <ModelDefinition xmlns="http://www.pharmml.org/2013/03/ModelDefinition">
        
        <!-- VARIABILITY -->
        <VariabilityModel blkId="randomError" type="parameterVariability">
            <Level symbId="subject"/>
        </VariabilityModel>
        
        <ParameterModel blkId="pm1">
            <RandomVariable symbId="binary">
                <ct:VariabilityReference>
                    <ct:SymbRef symbIdRef="subject"/>
                </ct:VariabilityReference>
                <BernoulliDistribution xmlns="http://www.uncertml.org/3.0" definition="http://www.uncertml.org/3.0">
                    <categoryProb definition="http://www.uncertml.org/3.0">
                        <name>0</name>
                        <probability>
                            <var varId="p"/>
                        </probability>
                    </categoryProb>
                </BernoulliDistribution>
            </RandomVariable>
        </ParameterModel>
        
        
        <!-- NOMINAL -->
        <ObservationModel blkId="om1">
            <Discrete>
                <SimpleParameter symbId="p"/>
                
                <CategoricalData ordered="yes">
                    <ListOfCategories> 
                        <Category symbId="cat0"/>
                        <Category symbId="cat1"/>
                    </ListOfCategories>
                    
                    <CategoryVariable symbId="y"/>
                    
                    <!-- P(y = 1) = p -->
                    <Probability linkFunction="identity">
                        <math:LogicBinop op="eq">
                            <ct:SymbRef symbIdRef="y"/>
                            <ct:SymbRef symbIdRef="cat1"/>
                        </math:LogicBinop>
                        <ct:Assign>
                            <ct:SymbRef symbIdRef="p"/>
                        </ct:Assign>
                    </Probability>
                    
<!--                    <!-\- ALTERNATIVE -\->
                    <PMF>
                        <un:BernoulliDistribution definition="http://www.uncertml.org/3.0">
                            <un:categoryProb definition="http://www.uncertml.org/3.0">
                                <un:name>0</un:name>
                                <un:probability>
                                    <un:var varId="p"/>
                                </un:probability>
                            </un:categoryProb>
                        </un:BernoulliDistribution>
                    </PMF>  -->
                </CategoricalData>
            </Discrete>
        </ObservationModel>
        
        <!-- ORDERED -->
        <ObservationModel blkId="om2">
            <Discrete>
                
                <CategoricalData ordered="yes">
                    <ListOfCategories> 
                        <Category symbId="cat1"/>
                        <Category symbId="cat2"/>
                        <Category symbId="cat3"/>
                    </ListOfCategories>
                    
                    <CategoryVariable symbId="y"/>
                    
                    <!-- P(y <= 1) = a1/(a1+a2+a3) --> 
                    <Probability linkFunction="identity">
                        <math:LogicBinop op="leq">
                            <ct:SymbRef symbIdRef="y"/>
                            <ct:SymbRef symbIdRef="cat1"/>
                        </math:LogicBinop>
                        <ct:Assign>
                            <math:Equation>
                                <math:Binop op="divide">
                                    <ct:SymbRef symbIdRef="a1"/>
                                    <math:Binop op="plus">
                                        <ct:SymbRef symbIdRef="a1"/>
                                        <math:Binop op="plus">
                                            <ct:SymbRef symbIdRef="a2"/>
                                            <ct:SymbRef symbIdRef="a3"/>
                                        </math:Binop>
                                    </math:Binop>
                                </math:Binop>
                            </math:Equation>
                        </ct:Assign>
                    </Probability>
                </CategoricalData>
            </Discrete>            
        </ObservationModel>
        
        
        <!-- ORDERED with DISCRETE MARKOV -->
        <ObservationModel blkId="om3">
            <Discrete>
                <SimpleParameter symbId="p01"/>
                <SimpleParameter symbId="p11"/>
                <SimpleParameter symbId="a112"/>
                
                <CategoricalData ordered="yes">
                    <ListOfCategories>
                        <Category symbId="cat1"/>
                    </ListOfCategories>
                    
                    <CategoryVariable symbId="y"/>
                    <InitialStateVariable symbId="yinit"/>
                    <PreviousStateVariable symbId="yp1"/>
                    <PreviousStateVariable symbId="yp2"/>
                    
                    <Dependance type="discreteMarkov"/>

                    <!-- Initial state probability (optional) -->
                    <!-- P(y = 1) = a1 -->
                    <Probability linkFunction="identity">
                        <!-- yinit = 1 -->
                        <math:LogicBinop op="eq">
                            <ct:SymbRef symbIdRef="yinit"/>
                            <ct:SymbRef symbIdRef="cat1"/>
                        </math:LogicBinop>
                        <ct:Assign>
                            <ct:SymbRef symbIdRef="a1"/>
                        </ct:Assign>
                    </Probability>
                    
                    <!-- 1st order -->
                    <!-- P(y<=1|yp1=0)=p01 -->
                    <Probability linkFunction="identity">
                        <!-- y<=1 -->
                        <CurrentState>
                            <math:LogicBinop op="leq">
                                <ct:SymbRef symbIdRef="y"/>
                                <ct:SymbRef symbIdRef="cat1"/>
                            </math:LogicBinop>
                        </CurrentState>
                        <PreviousState>
                            <!-- yp1=0 -->
                            <math:LogicBinop op="eq">
                                <ct:SymbRef symbIdRef="yp1"/>
                                <ct:SymbRef symbIdRef="cat0"/>
                            </math:LogicBinop>
                        </PreviousState>
                        <ct:Assign>
                            <ct:SymbRef symbIdRef="p01"/>
                        </ct:Assign>
                    </Probability>
                    
                    <!-- 2nd order -->
                    <!--   logit(P(y <= 1 | yp1 = 1, yp2 = 2)) = a112 -->
                    <Probability linkFunction="logit">
                        <CurrentState>
                            <!-- y<=1 -->
                            <math:LogicBinop op="leq">
                                <ct:SymbRef symbIdRef="y"/>
                                <ct:SymbRef symbIdRef="cat1"/>
                            </math:LogicBinop>
                        </CurrentState>
                        <PreviousState order="1">
                            <!-- yp1=1 -->
                            <math:LogicBinop op="eq">
                                <ct:SymbRef symbIdRef="yp1"/>
                                <ct:SymbRef symbIdRef="cat1"/>
                            </math:LogicBinop>
                        </PreviousState>
                        <PreviousState order="2">
                            <!-- yp2=2 -->
                            <math:LogicBinop op="eq">
                                <ct:SymbRef symbIdRef="yp2"/>
                                <ct:SymbRef symbIdRef="cat2"/>
                            </math:LogicBinop>
                        </PreviousState>
                        <ct:Assign>
                            <ct:SymbRef symbIdRef="a112"/>
                        </ct:Assign>
                    </Probability>
                </CategoricalData>
            </Discrete>

        </ObservationModel>
        
        <!-- ORDERED with CONTINUOUS MARKOV -->
        <ObservationModel blkId="om4">
            <Discrete>
                <SimpleParameter symbId="p01"/>
                <SimpleParameter symbId="p11"/>
                
                <CategoricalData ordered="yes">
                    <ListOfCategories>
                        <Category symbId="cat0"/>
                    </ListOfCategories>
                    
                    <CategoryVariable symbId="y"/>
                    <PreviousStateVariable symbId="yp1"/>
                    
                    <Dependance type="continuousMarkov"/>
                    
                    <!-- TransitionRate(y2,y1) = exp(a+b*t) -->
                    <TransitionRate linkFunction="identity">
                        <CurrentState>
                            <!-- y=1 -->
                        </CurrentState>
                        <PreviousState>
                            <!-- yp1=1 -->
                        </PreviousState>
                        <Assign>
                            <!-- exp(a+b*t) -->
                        </Assign>
                    </TransitionRate>
                    
                </CategoricalData>
            </Discrete>
            
        </ObservationModel>
    </ModelDefinition>
    
    
</PharmML>
